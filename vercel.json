{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/transcripts",
      "dest": "/public/transcripts/index.html"
    },
    {
      "src": "/transcripts/(.*)",
      "dest": "/public/transcripts/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
} 